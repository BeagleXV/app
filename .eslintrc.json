{
  "extends": [
    "airbnb",
    "plugin:prettier/recommended",
    "next/core-web-vitals",
    "plugin:storybook/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "quotes": ["error", "single"],
    "no-unused-vars": "error",
    "comma-dangle": ["error", "always-multiline"],
    "eol-last": ["error", "always"],
    "semi": ["error", "always"],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "jsxSingleQuote": false
      }
    ]
  }
}
